<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="redisClient" class="org.jocean.redis.impl.DefaultRedisClient">
        <constructor-arg value="${redis.client.thread.count:0}"/>
        <property name="fornew">
            <bean class="org.jocean.redis.RedisUtil"
                factory-method="composite">
                <constructor-arg>
                    <list>
			            <bean class="org.jocean.redis.RedisUtil"
			                factory-method="authRedis">
			                <constructor-arg name="passwd" value="${redis.server.passwd}"/>
			            </bean>
                        <bean class="org.jocean.redis.RedisUtil"
                            factory-method="selectDB">
                            <constructor-arg name="dbno" value="${redis.server.dbno}"/>
                        </bean>
                    </list>
                </constructor-arg>
            </bean>
        </property>
        <property name="defaultRedisServer">
            <bean class="java.net.InetSocketAddress">
                <constructor-arg index="0" type="java.lang.String"
                    value="${redis.server.hostname}"/>
                <constructor-arg index="1"  type="int"
                    value="${redis.server.port}"/>
            </bean>
        </property>
    </bean>
     
</beans>
