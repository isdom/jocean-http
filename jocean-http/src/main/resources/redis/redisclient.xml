<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="redisClient" class="org.jocean.redis.impl.DefaultRedisClient">
        <constructor-arg value="${redis.client.thread.count:0}"/>
        <property name="fornew">
            <bean class="org.jocean.redis.RedisUtil"
                factory-method="authRedis">
                <constructor-arg name="passwd" value="${redis.server.passwd}"/>
            </bean>
        </property>
        <property name="defaultRedisServer">
            <bean class="java.net.InetSocketAddress">
                <constructor-arg name="hostname" 
                    value="${redis.server.hostname}"/>
                <constructor-arg name="port" 
                    value="${redis.server.port}"/>
            </bean>
        </property>
    </bean>
     
</beans>
