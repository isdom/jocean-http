<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="httpServerBuilder" class="org.jocean.http.server.impl.DefaultHttpServerBuilder">
        <constructor-arg value="${http.server.accept.thread.count:1}"/>
        <constructor-arg value="${http.server.work.thread.count:0}"/>
        <property name="inboundBlockSize" value="${in.blocksize:0}"/>
        <property name="inboundRecvBufSize" value="${in.recvbuf:8192}"/>
    </bean>
    
    <bean class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="org.jocean:name=tradeHolder" value-ref="httpServerBuilder"/>
            </map>
        </property>
    </bean>
     
</beans>
