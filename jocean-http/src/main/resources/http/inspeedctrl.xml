<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="inboundSpeedController" class="org.jocean.http.server.InboundSpeedController">
        <property name="timer" ref="timer"/>
        <property name="maxBytesPerSecond" value="${in.maxBPS:1048576}"/>
        <property name="maxDelay" value="${in.maxdelay:500}"/>
    </bean>
    
</beans>
